<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    
     <style name="HPBar" parent="android:Widget.ProgressBar.Horizontal">
          <item name="android:indeterminateOnly">false</item>
          <item name="android:progressDrawable">@drawable/hp_progressbar</item>
          <item name="android:minHeight">15dip</item>
          <item name="android:maxHeight">30dip</item>
          <item name="android:minWidth">120dip</item>
          <item name="android:maxWidth">200dip</item>
        </style>   
        
      <style name="MPBar" parent="android:Widget.ProgressBar.Horizontal">
          <item name="android:indeterminateOnly">false</item>
          <item name="android:progressDrawable">@drawable/mp_progressbar</item>
          <item name="android:minHeight">15dip</item>
          <item name="android:maxHeight">30dip</item>
          <item name="android:minWidth">120dip</item>
          <item name="android:maxWidth">200dip</item>
        </style>  
        
       <style name="ButtonText">
		  <item name="android:textColor">#FFFFFF</item>
          <item name="android:minHeight">30dip</item>
          <item name="android:maxHeight">40dip</item>
          <item name="android:minWidth">60dip</item>
          <item name="android:maxWidth">60dip</item>
          <item name="android:textSize" >15dp</item>
	    <item name="android:textStyle" >bold</item>
	    <item name="android:shadowColor" >#000000</item>
	    <item name="android:shadowDx" >1</item>
	    <item name="android:shadowDy" >1</item>
	    <item name="android:shadowRadius" >2</item>
        </style>  
        
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
