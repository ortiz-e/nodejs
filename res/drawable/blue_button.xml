<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
<shape 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke 
        android:width="1dp" 
        android:color="#505050"/>
    <corners 
        android:radius="7dp" />

    <padding 
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp"/>

   <gradient
        android:startColor="#00D0FC"
        android:centerColor="#00B0DC"
        android:centerY="0.2"
        android:endColor="#00B0DC"
        android:angle="270"
    />

</shape>
</item>
</selector>